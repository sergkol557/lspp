{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ls++",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the ls++ application"
        },
        {
            "label": "Clean Build ls++",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--clean-first"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Clean and build the ls++ application"
        },
        {
            "label": "Install ls++",
            "type": "shell",
            "command": "sudo",
            "args": [
                "cmake",
                "--install",
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Install the ls++ application to /usr/local/bin",
            "promptOnClose": true
        },
        {
            "label": "Uninstall ls++",
            "type": "shell",
            "command": "sudo",
            "args": [
                "cmake",
                "--build",
                "build",
                "--target",
                "uninstall"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Uninstall the ls++ application",
            "promptOnClose": true
        },
        {
            "label": "Configure Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$cmake"
            ],
            "detail": "Configure the CMake build system"
        },
        {
            "label": "Test ls++",
            "type": "shell",
            "command": "./build/ls++",
            "args": [
                "--version"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Test the ls++ application by showing its version"
        }
    ]
}