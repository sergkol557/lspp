{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ls++",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the ls++ application"
        },
        {
            "label": "Clean Build ls++",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--clean-first"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Clean and build the ls++ application"
        },
        {
            "label": "Install ls++",
            "type": "shell",
            "command": "sudo",
            "args": [
                "cmake",
                "--install",
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Install the ls++ application to /usr/local/bin",
            "promptOnClose": true
        },
        {
            "label": "Uninstall ls++",
            "type": "shell",
            "command": "sudo",
            "args": [
                "cmake",
                "--build",
                "build",
                "--target",
                "uninstall"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Uninstall the ls++ application",
            "promptOnClose": true
        },
        {
            "label": "Configure Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$cmake"
            ],
            "detail": "Configure the CMake build system"
        },
        {
            "label": "Test ls++",
            "type": "shell",
            "command": "./build/ls++",
            "args": [
                "--version"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Test the ls++ application by showing its version"
        },
        {
            "label": "Compile Test",
            "type": "shell",
            "command": "./compile_test.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Run the compile test script to manually compile all source files"
        },
        {
            "label": "Icon Test",
            "type": "shell",
            "command": "./icon_test.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Test Unicode icon display in the terminal"
        },
        {
            "label": "Test Combined Flags",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "test_combined_flags.cpp",
                "src/ArgumentParser.cpp",
                "-Isrc",
                "-o",
                "test_combined_flags",
                "&&",
                "./test_combined_flags"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Build and run the combined flags test"
        },
        {
            "label": "Test Music Icon",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "test_music_icon.cpp",
                "src/IconProvider.cpp",
                "src/FileOperations.cpp",
                "-Isrc",
                "-o",
                "test_music_icon",
                "&&",
                "./test_music_icon"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Build and run the music icon test"
        }
    ]
}